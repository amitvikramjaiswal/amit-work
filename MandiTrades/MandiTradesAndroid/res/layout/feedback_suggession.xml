<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="@dimen/padding_normal" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We look forward for your feedback and suggessions.\n\nPlease feel free to write us with any questions, concerns, or new ideas."
        android:textSize="@dimen/text_size_large" />

    <EditText
        android:id="@+id/feedback_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_comment_box"
        android:layout_marginTop="@dimen/padding_normal"
        android:background="@drawable/border_shape"
        android:gravity="top"
        android:hint="@string/type_your_feedback"
        android:padding="@dimen/padding_normal"
        android:textSize="@dimen/text_size_large" >
    </EditText>

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#ff9ab63c"
        android:padding="@dimen/padding_normal"
        android:text="@string/submit"
        android:textColor="@android:color/white" />

</LinearLayout>