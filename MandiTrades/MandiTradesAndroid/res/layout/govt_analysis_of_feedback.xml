<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padding_normal" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/govt_feedback_analysis_text1"
        android:layout_marginBottom="@dimen/padding_normal"
        android:textSize="@dimen/text_size_large" />
    
   <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_normal"
        android:text="@string/govt_feedback_analysis_text2"
        android:textSize="@dimen/text_size_large" />

   

</LinearLayout>