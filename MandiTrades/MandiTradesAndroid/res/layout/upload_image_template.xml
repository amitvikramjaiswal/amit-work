<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/height_image_upload_layout"
    android:layout_height="@dimen/height_image_upload_layout" >

    <ImageView
        android:id="@+id/upload_image_icon"
        android:layout_width="@dimen/height_image_upload_icon"
        android:layout_height="@dimen/height_image_upload_icon"
        android:layout_centerInParent="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
    
        android:src="@drawable/plus_icon"
        android:tag="0" />

    <ImageView
        android:id="@+id/remove_image_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/cross_icon_black"
        android:visibility="gone" />

</RelativeLayout>